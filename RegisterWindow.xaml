<Window x:Class="AddressBook.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register" Height="350" Width="400">
    <StackPanel Margin="20">
        <TextBlock Text="Register" FontSize="24" Margin="0,0,0,20"/>
        
        <Label Content="Username:"/>
        <TextBox x:Name="txtUsername" Margin="0,0,0,10"/>
        
        <Label Content="Email:"/>
        <TextBox x:Name="txtEmail" Margin="0,0,0,10"/>
        
        <Label Content="Password:"/>
        <PasswordBox x:Name="txtPassword" Margin="0,0,0,10"/>
        
        <Label Content="Confirm Password:"/>
        <PasswordBox x:Name="txtConfirmPassword" Margin="0,0,0,20"/>
        
        <Button Content="Register" Click="Register_Click" Width="100"/>
        
        <TextBlock x:Name="txtError" Foreground="Red" Margin="0,10,0,0"/>
    </StackPanel>
</Window>