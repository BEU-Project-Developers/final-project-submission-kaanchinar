<Window x:Class="AddressBook.ContactWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Contact Details" Height="300" Width="400">
    <StackPanel Margin="10">
        <Label Content="First Name:"/>
        <TextBox x:Name="txtFirstName"/>
        <Label Content="Last Name:"/>
        <TextBox x:Name="txtLastName"/>
        <Label Content="Email:"/>
        <TextBox x:Name="txtEmail"/>
        <Label Content="Phone Number:"/>
        <TextBox x:Name="txtPhoneNumber"/>
        <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
            <Button Content="Save" Click="Save_Click" Width="100" Margin="0,0,10,0"/>
            <Button Content="Cancel" Click="Cancel_Click" Width="100"/>
        </StackPanel>
    </StackPanel>
</Window>