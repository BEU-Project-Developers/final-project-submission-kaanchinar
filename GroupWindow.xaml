<Window x:Class="AddressBook.GroupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Group" MinHeight="300" MinWidth="400">
    <StackPanel Margin="20">
        <Label Content="Group Name:"/>
        <TextBox x:Name="txtGroupName" Margin="0,0,0,10"/>

        <Label Content="Description:"/>
        <TextBox x:Name="txtDescription" Margin="0,0,0,10"/>

        <Label Content="Contacts:"/>
        <ListBox x:Name="lstContacts" Margin="0,0,0,10" DisplayMemberPath="FirstName" SelectionMode="Multiple"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Save" Click="Save_Click" Width="75" Margin="0,0,10,0"/>
            <Button Content="Cancel" Click="Cancel_Click" Width="75"/>
        </StackPanel>
    </StackPanel>
</Window>