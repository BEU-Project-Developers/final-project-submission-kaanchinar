<Window x:Class="AddressBook.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Width="800" Height="600">
    <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Login" FontSize="34" FontWeight="DemiBold" Margin="0,0,0,20" HorizontalAlignment="Center"/>
        
        <Label Content="Username:"/>
        <TextBox x:Name="txtUsername" Margin="0,0,0,10" MinWidth="140"/>
        
        <Label Content="Password:"/>
        <PasswordBox x:Name="txtPassword" Margin="0,0,0,20" MinWidth="140"/>
        
        <Button Content="Login" Click="Login_Click" Width="100" Margin="0,0,0,10"/>
        <Button Content="Register" Click="Register_Click" Width="100"/>
        
        <TextBlock x:Name="txtError" Foreground="Red" Margin="0,10,0,0"/>
    </StackPanel>
</Window>